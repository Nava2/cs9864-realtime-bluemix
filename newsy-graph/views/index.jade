extends layout

block content
  h1 Ticker Watch!

  .container-fluid
    .row
      .col-md-12
        .form-inline
          .form-group#ticker-form
            label(for='#ticker-box') Ticker&nbsp;
            input#ticker-box.form-control(type='text', placeholder='AAPL')
          | &nbsp;
          button#add-ticker.btn.btn-primary Add!

          | &nbsp;
          button#fetch-btn.btn.btn-info Fetch!

    .row
      .col-md-3
        .row
          h3 Stocks
          ul#stock-list

        .row
          h3 Newzy-time Stuff
          ul#news-list

      .col-md-9
        canvas#stock-chart




